<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listcontainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="climbberlin.de.mapapps.climbup.Fragments.FavoritesListFragment">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/favorites_no_contant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/favorites_no_contant"
                android:textSize="36sp"
                tools:visibility="invisible" />

            <TextView
                android:id="@+id/favorites_no_contant_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:text="@string/favorites_no_contant_small"
                android:textSize="20sp"
                tools:visibility="invisible" />

        </LinearLayout>

        <ListView
            android:id="@+id/listView_favorits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:visibility="visible" />

        <!--<android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/cardview_shadow_start_color" />-->

    </android.support.design.widget.CoordinatorLayout>

</FrameLayout>



